<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-5 rounded", id: "new", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", id:"title", placeholder: "Wprowadz nazwe uzytkownika" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", id:"title", placeholder: "Wprowadz swoj email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", id:"title", placeholder: "Wybierz haslo" %>
        </div>
      </div>

     <div class="form-group row justify-content-center">
       <%= f.submit(@user.new_record? ? "Rejestruje chuje muje" : "Zaktualizuj profil", class: "btn btn-primary btn-lg", id: "buton") %>
     </div>

      <% end %>
    </div>
    <%= link_to '[Cancel and return to articles listing]', articles_path %>
  </div>
</div>
