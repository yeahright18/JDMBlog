<h1 class="text-center mt-4"><strong>Stworz kategorie</strong></h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-5 rounded", id: "new", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "Kategoria", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", id:"title", placeholder: "Wprowadz nazwe" %>
        </div>
      </div>

     <div class="form-group row justify-content-center">
       <%= f.submit class: "btn btn-primary btn-lg", id: "buton" %>
     </div>

      <% end %>
    </div>
    <%= link_to '[Cancel and return to articles listing]', articles_path %>
  </div>
</div>

